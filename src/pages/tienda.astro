---
import Layout from '../layout/layout.astro'
import Footer from '../components/footer.astro'
import Productos from '../data/productos.json'
import BotonInformacion from '../components/botonInfo.astro'
---

<Layout title=" - Tienda">

    <section class="w-full h-screen bg-[#FAFFFA]">
        <div class="flex flex-col justify-center max-w-[1100px] mx-auto">
            <header class="grid justify-center mx-auto my-5">
                <p class="mt-32 text-3xl mb-7 px-6 font-black">Nuestos Productos</p>
                <div class="flex justify-center">
                    <BotonInformacion/>
                </div>
            </header>
            <div class="grid gap-8 mb-6 grid-cols-2 lg:mb-16 md:grid-cols-4">
                {Productos.map(maps =>
                <div class="grid grid-cols-2 bg-blue-500 rounded-lg space-y-0 mb-8">
                    <img class="h-32 row-span-3" src={maps.image}/>
                    <div class="text-wrap px-2 text-white">
                        <p class="text-md">Item: {maps.name}</p>
                        <p>Precio: {maps.price}</p>
                    </div>
                </div>
                )}
            </div>
        </div>
    </section>
    <Footer/>
</Layout>