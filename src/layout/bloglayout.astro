---
import Layout from "./layout.astro";

const { frontmatter } = Astro.props;

const { title, author } = frontmatter;
---

<Layout>
    <div class="mt-24 px-36">
        <h3 class="text-2xl font-bold mb-3">{title}</h3>
        <p class="mb-5">Escrito por: {author}</p>
        <slot/>
    </div>
</Layout>